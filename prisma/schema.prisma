generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Type {
  WATER
  GAS
}

enum Status {
  PENDING
  CONFIRMED
  REJECTED
}

model TempMeasure {
  measure_uuid     String   @id @default(auto()) @map("_id") @db.ObjectId
  customer_code    String
  measure_datetime DateTime
  measure_type     Type
  image_url        String
  measure_value    Int
  status           Status   @default(PENDING)

  @@index([customer_code, measure_datetime, measure_type], name: "unique_monthly_reading")
}

model Measure {
  measure_uuid     String   @id @default(auto()) @map("_id") @db.ObjectId
  customer_code    String   @unique
  measure_datetime DateTime
  measure_type     Type
  image_url        String
  measure_value    Int
  confirmed_at     DateTime

  @@unique([customer_code, measure_datetime, measure_type], name: "unique_monthly_reading")
}
